= form_for(@s_a) do |f|
  - if @s_a.completion_date
    = "Completion date: #{@s_a.completion_date.strftime('%m/%d/%Y')}"
    %br
    = link_to "Change completion date", '#',  class: 'title-link', id: 'change_date'
    %br
  - else
    = f.label :completion_date
    = f.text_field :completion_date, id: 'due_date', placeholder: "Enter Date"
  = f.label :comment, "Add comments", id: "comments"
  = f.text_area :comment
  %br
  = f.submit "Submit", class: "btn btn-small btn-success", id: "submit-button"
